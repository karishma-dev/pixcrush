{
  "name": "pixcrush",
  "version": "1.0.1",
  "description": "A CLI tool that converts PNG and JPG images to WebP and rewrites React and Next.js code references automatically.",
  "main": "dist/cli.js",
  "author": "Karishma Garg",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "webp",
    "image",
    "optimization",
    "react",
    "nextjs",
    "cli",
    "converter",
    "performance"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "dependencies": {
    "@babel/core": "^7.29.0",
    "@babel/generator": "^7.29.1",
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "@clack/prompts": "^1.0.1",
    "cac": "^6.7.14",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "bin": {
    "pixcrush": "./bin/pixcrush.js"
  }
}
